{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["esnext", "WebWorker"],
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@utils": [
        "utils/index.ts"
      ],
      "@constants": [
        "constants.ts"
      ],
      "@types": [
        "types.ts"
      ]
    }
  },
  "include": ["src", "scripts", "tests"],
  "exclude": ["node_modules"]
}
